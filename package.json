{
  "name": "brinkiton",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "echoascii production && NODE_ENV=production node ./dist/server",
    "dev": "echoascii dev && run-p dev:client dev:server",
    "dev:client": "parcel ./client/index.html --no-cache",
    "dev:server": "nodemon --watch server ./server",
    "build": "echoascii build && run-p build:cleanup build:client build:server",
    "build:cleanup": "rm -fr ./dist",
    "build:client": "parcel build --no-cache ./client/index.html -d dist/client --public-url /",
    "build:server": "run-s build:server:a build:server:b",
    "build:server:a": "parcel build --no-cache ./server -d dist/server --target=node",
    "build:server:b": "mv ./dist/server/*.js ./dist/server/index.js"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-module-resolver": "^3.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.2",
    "classnames": "^2.2.5",
    "cors": "^2.8.4",
    "date-fns": "^1.29.0",
    "dotenv": "^5.0.1",
    "echoascii": "^1.0.3",
    "express": "^4.16.3",
    "inline-style-prefix-all": "^2.0.2",
    "lottie-web": "^5.1.10",
    "matter-js": "^0.14.1",
    "nodemon": "^1.17.2",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.6.2",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-inject": "^1.0.1",
    "postcss-modules": "^1.1.0",
    "postcss-reporter": "^4.0.0",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "validate.js": "^0.12.0"
  }
}
